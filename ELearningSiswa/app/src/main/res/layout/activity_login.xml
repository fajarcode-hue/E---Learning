<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/bg_app"
    tools:context=".LoginActivity">

<!--    LOGIN DH KELAR DIKERJAKAN BETAN-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center">

        <!-- Logo Icon -->

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/project_p_logo"
                android:scaleType="centerCrop"
                />



            </androidx.cardview.widget.CardView>



        <!-- Judul -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Datang"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/primary_blue"
            android:layout_marginBottom="8dp"/>

        <!-- Subjudul -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Silakan masuk untuk mulai belajar"
            android:textSize="14sp"
            android:textColor="@color/text_grey"
            android:layout_marginBottom="40dp"/>

        <!-- Input Email (ID dipertahankan: etEmail) -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_input_rounded"
            android:hint="Alamat Email"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"/>

        <!-- Input Password (ID dipertahankan: etPassword) -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_input_rounded"
            android:hint="Kata Sandi"
            android:inputType="textPassword"
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="32dp"
            android:elevation="2dp"/>

        <!-- Tombol Login (ID dipertahankan: btnLogin) -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="MASUK SEKARANG"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_primary"
            app:backgroundTint="@null"
            android:stateListAnimator="@null"/>
        <!-- Note: app:backgroundTint="@null" penting agar drawable gradasi tidak tertutup warna default button -->

        <!-- Progress Bar (ID dipertahankan: progressBar) -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:visibility="gone"/>

    </LinearLayout>
</ScrollView>